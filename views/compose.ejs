<%- include("partials/header"); -%>
<h1>Compose</h1>

<form action="/compose" method="post">
    <div class = "form-group">
    <label for="postTitle">Title</label>
    <input type="text" name="postTitle" class="form-control"  style="width: 500px;">
    <br>
    <label for="postBody">Post</label>
    <br>
    <textarea name="postBody" rows="5" class="form-control" style="resize: none ;width : 500px;"></textarea>
    <br>
    <button type="submit" name="button" class="btn btn-primary form-control" style="width: 100px;">Publish</button>

</div>
</form>
<%- include("partials/footer"); -%>